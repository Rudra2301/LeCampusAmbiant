<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip" >

    <!-- Title Of Song-->
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom restaurant"
        android:textColor="#040404"
        android:typeface="monospace"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <!-- Artist Name -->
    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="10dip"
        android:text="Vous pouvez y manger dans"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="10dp" />

    <!-- Rightend Duration -->

    <!-- Rightend Arrow -->

    <ImageView
        android:id="@+id/icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignLeft="@+id/text"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/text"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/ic_thumb_up_black_48dp"
        android:backgroundTint="#00b509"
        android:backgroundTintMode="src_in" />

    <TextView
        android:id="@+id/tempsAttente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="10dip"
        android:text="7 minutes"
        android:layout_alignTop="@+id/artist"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/artist"
        android:layout_marginLeft="5dp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageButton"
        android:layout_alignBottom="@+id/tempsAttente"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_star_black_48dp"
        android:clickable="true"
        android:layout_marginRight="5dp"
        android:backgroundTint="#1e87f5"
        android:backgroundTintMode="src_in" />

</RelativeLayout>