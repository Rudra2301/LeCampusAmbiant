<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#ef2a28</item>
        <item name="android:textColor">#ffffff</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#ef2a28</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#d81a18</item>
        <item name="colorAccent">#d81a18</item>
        <item name="android:statusBarColor">#d81a18</item>

    </style>

    <style name="MyActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#ef2a28</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

</resources>
